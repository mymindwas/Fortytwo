[Unit]
Description=FortyTwo Token Monitor Telegram Bot
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/root/fortytwo-bot
Environment=TELEGRAM_BOT_TOKEN=your_bot_token_here
ExecStart=/root/fortytwo-bot/.venv/bin/python fortytwo_telegram_bot.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target 